<% const estaCreando = typeof usuario === "undefined"%>


<h1> <%= estaCreando ? 'Crear':'Actualizar' %> usuario</h1>

<p><%= estaCreando ? 'Cree':'Actualice' %> una usuario</p>

<!-- emmet -->
<form action="/usuario/<%= estaCreando ? 'crear' : 'actualizar' %>-usuario/<%= estaCreando ? '' : usuario.id %>"
      method="POST">

    <div>
        <label for="id">Id</label>
        <input id="id"
               name="id"
               type="text"
               value="<%= estaCreando ? '' : usuario.id %>"
        >
    </div>

    <div>
        <label for="nombre">Nombre</label>
        <input id="nombre"
               name="nombre"
               type="text"
               value="<%= estaCreando ? '' : usuario.nombre %>"
        >
    </div>

    <div>
        <label for="apellido">Apellido</label>
        <input id="apellido"
               name="apellido"
               type="text"
               value="<%= estaCreando ? '' : usuario.apellido %>"
        >
    </div>

    <div>
        <label for="email">E-mail</label>
        <input id="email"
               name="email"
               type="text"
               value="<%= estaCreando ? '' : usuario.email %>"
        >
    </div>

    <div>
        <label for="password">Password</label>
        <input id="password"
               name="password"
               type="text"
               value="<%= estaCreando ? '' : usuario.pass %>"
        >
    </div>

    <div>
        <label for="fechaNacimiento">Fecha de Nacimiento</label>
        <input id="fechaNacimiento"
               name="fechaNacimiento"
               type="text"
               value="<%= estaCreando ? '' : usuario.fechaNacimiento %>"
        >
    </div>

    <button><%= estaCreando ? 'Crear' : 'Actualizar' %> usuario</button>

</form>

<a href="/usuario/inicio">
    <button>Regresar</button>
</a>