<% include ./comunes/header.ejs %>
<div class="container">
<div class="row" style="padding-top: 100px;">
    <div class="col-md-2"></div>
    <div class="col-md-8 border bg-dark" id="contenido" >

        <h1 class="text-white "><%= evento.nombre %></h1>
        <!-- Modal Content -->
        <div class="row" style="background-color: rgba(0, 0, 0, 0.7);">
            <div class="col-md-6 text-white">
                <h2 class="titulo">Detalles</h2>
                <ul>
                    <li  class="list-group-item list-group-item-action bg-success text-white"><%= evento.nombre %></li>
                    <li  class="list-group-item list-group-item-action"><strong>Fecha: </strong><%= evento.fecha %></li>
                    <li  class="list-group-item list-group-item-action"><strong>Latitud: </strong><%= evento.latitud %></li>
                    <li  class="list-group-item list-group-item-action"><strong>Longitud: </strong><%= evento.longitud %></li>

                </ul>
                <h2 class="titulo">Localizacion del Evento</h2>
                <div style="width: 100%;background-color: rgba(0, 0, 0, 0.7);">
                    <iframe width="100%" height="600"
                            src="https://maps.google.com/maps?width=100%&amp;height=600&amp;hl=en&amp;q=1%20Grafton%20Street%2C%20Dublin%2C%20Ireland+(My%20Business%20Name)&amp;ie=UTF8&amp;t=&amp;z=14&amp;iwloc=B&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"><a href="https://www.maps.ie/map-my-route/">Create route map</a></iframe></div><br />

            </div>

            <div class="col-md-6 list-group text-white">
                <h2 class="titulo">Ingredientes</h2>

                    <% evento.ingredientes.forEach((ingrediente)=>{ %>
                <ul>
                        <li  class="list-group-item list-group-item-action active bg-dark animated fadeInDown"><strong><%= ingrediente.nombreIngrediente %></strong></li>
                        <li  class="list-group-item list-group-item-action animated fadeInLeft"><strong>Preparacion: </strong><%= ingrediente.descripcionPreparacion %></li>
                        <li  class="list-group-item list-group-item-action bg-success animated fadeInUpBig text-white"><strong>Tipo: </strong><%= ingrediente.tipoIngrediente %></li>
                </ul>
                <br>
                <%})%>



            </div>
        </div>

    </div>
    <div class="col-md-2"></div>
</div>

</div>

<% include ./comunes/librerias.ejs %>
<% include ./comunes/footer.ejs %>