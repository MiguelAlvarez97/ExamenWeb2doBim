<% include ./comunes/header.ejs %>
<% const existeMensaje = typeof errores !== "undefined" ? true : false; %>

<div class="container">
    <div class="row" style="padding-top: 100px;">
    <div class="col-md-3"></div>
    <div class="col-md-6 border text-white" id="contenido" style="background-color: rgba(122, 170, 219, 0.5);">
        <% if(existeMensaje){ %>
            <div class="animated fadeInUp alert alert-danger" role="alert">
                ERROR: <%= errores %>
            </div>
        <% } %>
        <h1 class="titulo">Registrate </h1>
            <br>
        <!-- Modal Content -->
        <form action="/usuario/registrarse" method="post">


            <label for="nombre"><b>Nombre</b></label>
            <input class="form-control"
                   id="nombre" type="text" placeholder="Ingresa tu Nombre" name="nombre" required>
            <br>
            <label for="fecha_nacimiento"><b>Fecha Nacimiento</b></label>
            <input class="form-control"
                   id="fecha_nacimiento" type="date" max="2019-02-08" min="1950-01-01" placeholder="Ingresa tu Fecha de Nacimiento" name="fecha_nacimiento" required>
            <br>
            <label for="correo"><b>Correo</b></label>
            <input class="form-control"
                   id="correo" type="text" placeholder="Ingresa tu correo" name="correo" required>
            <br>
            <label for="password"><b>Contraseña</b></label>
            <input  class="form-control"
                    id="password" type="password" placeholder="Ingresa tu contraseña" name="password" required>

            <button style="margin-top: 20px; margin-bottom: 20px;" type="submit" class="btn btn-danger btn-block">Registrar</button>

        </form>
            <a href="/usuario/login" style="text-decoration: none">
                <button class="btn btn-success btn-block btn-espaciado"
                >Regresar</button>
            </a>
    </div>
    <div class="col-md-3"></div>

</div>
</div>
<% include ./comunes/librerias.ejs %>
<% include ./comunes/footer.ejs %>